             x:DataType="viewmodel:BaeumeAllViewModel"
             x:Class="deinbaumApp.Views.Dashboard.BaeumePage"
             Title="{Binding Title}">
    <ContentPage.Resources>
        <ResourceDictionary>
            <toolkit:ByteArrayToImageSourceConverter x:Key="ByteArrayToImageSourceConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>
    
